<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ituvtu.chat.ClientController">
    <TextArea fx:id="messageArea" editable="false" prefHeight="200.0" prefWidth="300.0"/>
    <TextField fx:id="inputField" promptText="Enter your message here..." prefWidth="300.0"/>
    <Button fx:id="sendButton" text="Send" onAction="#onSend"/>
</VBox>
