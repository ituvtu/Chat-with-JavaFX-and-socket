<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="ituvtu.chat.ClientController" spacing="10" alignment="CENTER">
    <TextArea fx:id="messageArea" editable="false" prefHeight="200"  wrapText="true"/>
    <TextArea fx:id="inputField" promptText="Enter your message here" wrapText="true" />
    <Button text="Send" onAction="#sendMessage"/>
</VBox>
